<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    tools:context=".ui.home.HomeFragment">

    <!-- Top Navigation Bar -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="898dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/top_navigation_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <!-- Search Bar -->
            <EditText
                android:id="@+id/search_bar"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:hint="Search for food or restaurants" />

            <ImageView
                android:id="@+id/search_icon"
                android:layout_width="45dp"
                android:layout_height="56dp"
                android:src="@drawable/search_icon" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="567dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/popular_restaurant_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Popular Restaurant"
                    android:textSize="24sp"
                    android:textStyle="bold|italic" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/popular_card"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/popular_restaurant_image"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/pizza" />

                        <TextView
                            android:id="@+id/popular_restaurant_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="McDonald's"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/featured_cuisines"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Featured Cuisines"
                    android:textSize="24sp"
                    android:textStyle="bold|italic" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/featured_card"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/featured_cuisines_image"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/pizza" />

                        <TextView
                            android:id="@+id/featured_cuisines_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="pizza"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <!-- Popular Restaurants Section -->

    <!-- Featured Cuisines Section -->

</FrameLayout>
