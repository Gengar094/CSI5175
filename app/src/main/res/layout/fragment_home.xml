<?xml version="1.0" encoding="utf-8"?>
<!--<androidx.constraintlayout.widget.ConstraintLayout-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!-- Top Navigation Bar -->
    <LinearLayout
        android:id="@+id/top_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <!-- Search Bar -->
        <EditText
            android:id="@+id/search_bar"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:hint="Search for food or restaurants" />

        <ImageView
            android:id="@+id/search_icon"
            android:layout_width="45dp"
            android:layout_height="56dp"
            android:src="@drawable/search_icon" />
    </LinearLayout>
    <!-- Popular Restaurants Section -->

    <TextView
        android:id="@+id/popular_restaurants_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_navigation_bar"
        android:layout_margin="16dp"
        android:layout_marginTop="12dp"
        android:text="Popular Restaurants"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/top_navigation_bar"
        tools:layout_editor_absoluteX="0dp" />

    <!-- Featured Cuisines Section -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/popular_restaurants_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/popular_restaurants_title"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/popular_restaurants_title"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/featured_cuisines_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/popular_restaurants_list"
        android:layout_margin="16dp"
        android:text="Featured Cuisines"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/popular_restaurants_list"
        tools:layout_editor_absoluteX="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/featured_cuisines_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/featured_cuisines_title"
        app:layout_constraintTop_toBottomOf="@+id/featured_cuisines_title"
        tools:layout_editor_absoluteX="16dp" />
</RelativeLayout>
